<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :标题, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :内容, style: "display: block" %>
    <%= form.rich_text_area :content %>

  </div>

  <div>
    <%= form.label :状态, style: "display: block" %>
    <%= form.radio_button :status, "drafted" %>
    <%= form.label "drafted", "草稿" %>
    <%= form.radio_button :status, "published" %>
    <%= form.label "published", "发布" %>
  </div>

  <div class="buttons">
    <%= form.submit "提交", class: "button" %>
    <%= link_to "显示词条", entry, class: "button" %>
    <%= link_to "返回词条", entries_path, class: "button" %>
  </div>
<% end %>
